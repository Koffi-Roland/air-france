  	<bean id="context"  class="com.airfrance.repind.util.SingletonSpringApplicationContext" />
  
  <!-- *********************** END:  WEBSERVICE CONSUMER DECLARATION ************************ -->	

	<!-- Context transactionnel -->
	<bean id="myTxManager"
		class="org.springframework.orm.jpa.JpaTransactionManager">
		<property name="entityManagerFactory" ref="myEmf" />
	</bean>
	 
	<bean id="myTxManager2"
		class="org.springframework.orm.jpa.JpaTransactionManager">
		<property name="entityManagerFactory" ref="myEmf2" />
	</bean>

 	<bean class="org.springframework.orm.jpa.support.PersistenceAnnotationBeanPostProcessor" >
		<property name="defaultPersistenceUnitName" value="myEmf"/>
	</bean>

	<tx:annotation-driven transaction-manager="myTxManager" proxy-target-class="false"/>
	<context:annotation-config />

